@model DailyBlogger.Models.BlogPost
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "View";
}
<h2>View</h2>
<h4>Blog Post</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="blogTitle" class="control-label"></label>
                <input asp-for="blogTitle" class="form-control" />
                <span asp-validation-for="blogTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="content" class="control-label"></label>
                <input asp-for="content" class="form-control" />
                <span asp-validation-for="content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="blogDate" class="control-label"></label>
                <input asp-for="blogDate" class="form-control" />
                <span asp-validation-for="blogDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post Blog" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
